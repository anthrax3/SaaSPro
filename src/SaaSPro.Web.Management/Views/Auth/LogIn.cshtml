@model LoginModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@{
    ViewBag.Title = "Log In";
}

<div class="panel panel-default">
    <div class="panel-heading" style="background-color:black">
        <h3 class="panel-title"><img src="~/Images/saaspro-logo.png" alt="SaaSPro" title="SaaSPro" /></h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Username)
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            @*<div class="form-group">
                <a href="@Url.Action("forgot-password", "auth")">Forgot Password?</a> 
            </div>*@
            <button type="submit" class="btn btn-sm btn-primary">Sign in</button>
        }
        <font size="1"><strong>Username:</strong> 'admin', <strong>Password:</strong> 'password'</font>
    </div>
</div>



