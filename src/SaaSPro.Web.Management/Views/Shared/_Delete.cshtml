@model DeleteConfirmationModel

<div class="modal fade" id="delete-@Model.Id.ToString()">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">@Model.Title</h4>
      </div>
      <div class="modal-body">
        <p>@Html.Raw(Model.Message)</p>
      </div>
      <div class="modal-footer">
        <form method="post" action="@Model.Url">
            <a href="#" data-dismiss="modal" class="btn">Close</a>
            <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>&nbsp; Delete</button>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
