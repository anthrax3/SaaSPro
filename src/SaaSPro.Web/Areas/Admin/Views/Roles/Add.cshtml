@model SaaSPro.Services.ViewModels.RolesAddModel
@{
    ViewBag.Title = "Add Role";
}
<div class="page-main">
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>
    @using (Html.BeginForm("add", "roles", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        @Html.Partial("_Form")
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Add Role" />
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>