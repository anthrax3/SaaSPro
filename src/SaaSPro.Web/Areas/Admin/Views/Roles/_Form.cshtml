@model SaaSPro.Services.ViewModels.RolesUpdateModel
<div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Name)
</div>
<div class="form-group">
    @Html.LabelFor(model => model.UserType)
    @Html.EnumDropDownListFor(model => model.UserType, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.UserType)
    <span class="help-block">@Html.DescriptionFor(model => model.UserType)</span>
</div>