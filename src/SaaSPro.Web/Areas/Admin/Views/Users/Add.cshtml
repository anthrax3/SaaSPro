@model SaaSPro.Services.ViewModels.UsersAddModel
@{
    ViewBag.Title = "Add System User";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm("add", "users", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Profile</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
            <span class="help-block">@Model.Email</span>
        </div>
    </fieldset>
    <fieldset>
        <legend>Security</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecurityQuestion1)
            @Html.DropDownListFor(model => model.SecurityQuestion1, Model.SecurityQuestions, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecurityQuestion1)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecurityAnswer1)
            @Html.PasswordFor(model => model.SecurityAnswer1, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecurityAnswer1)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecurityQuestion2)
            @Html.DropDownListFor(model => model.SecurityQuestion2, Model.SecurityQuestions, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecurityQuestion2)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecurityAnswer2)
            @Html.PasswordFor(model => model.SecurityAnswer2, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecurityAnswer2)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecurityQuestion3)
            @Html.DropDownListFor(model => model.SecurityQuestion3, Model.SecurityQuestions, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecurityQuestion3)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecurityAnswer3)
            @Html.PasswordFor(model => model.SecurityAnswer3, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecurityAnswer3)
        </div>
    </fieldset>
    <fieldset>
        <legend>Roles</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedRoles)
            @*@Html.CheckBoxFor(model => model.SelectedRoles, Model.Roles)*@
            @Html.ValidationMessageFor(model => model.SelectedRoles)
        </div>
    </fieldset>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Add System User" />
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>