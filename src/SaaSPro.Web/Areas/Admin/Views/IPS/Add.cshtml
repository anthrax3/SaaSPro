@model SaaSPro.Services.ViewModels.IPSAddModel
@{
    ViewBag.Title = "Add IPS Entry";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm("add", "ips", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StartIPAddress)
        @Html.TextBoxFor(model => model.StartIPAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.StartIPAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EndIPAddress)
        @Html.TextBoxFor(model => model.EndIPAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EndIPAddress)
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Add IPS Entry" />
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>