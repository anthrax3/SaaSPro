@model SaaSPro.Services.ViewModels.AuthForgottenPasswordModel
@{
    ViewBag.Title = "Forgotten Password?";
}
@using (Html.BeginForm("forgotpassword", "auth", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <h2>@ViewBag.Title</h2>
    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email Address" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
}